<mujoco model="scene">
  <!-- 로봇 MJCF 포함 -->
  <include file="fr3v2.xml"/>

  <!-- 렌더/조명 기본값 -->
  <visual>
        <headlight diffuse="0.8 0.8 0.8" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
      <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>
      <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300" mark="edge" markrgb=".8 .8 .8"/>
      <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
      
      <material name="light_gray" rgba="0.7 0.7 0.7 1"/>
  </asset>

  <worldbody>
      <light pos="0 0 3.5" dir="0 0 -1" directional="true"/>
      <geom name="floor" size="10 10 .05" type="plane" material="grid"/>
  </worldbody>
</mujoco>

